<StackPane alignment="TOP_RIGHT" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.frondendtest.ui.card.CardController">
    <VBox maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="200.0" prefWidth="400.0" spacing="10.0" style="-fx-background-radius: 10; -fx-background-color: #405D72;">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <HBox alignment="TOP_CENTER" maxWidth="1.7976931348623157E308">
            <Label fx:id="title" maxWidth="1.7976931348623157E308" text="Sample Activity" textFill="#fff8f3" wrapText="true" HBox.hgrow="ALWAYS">
                <font>
                    <Font name="Verdana Bold" size="24.0" />
                </font>
                <HBox.margin>
                    <Insets />
                </HBox.margin>
            </Label>
            <ImageView fx:id="more" fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../images/more.png" />
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
            </ImageView>
        </HBox>
        <Separator prefWidth="200.0">
            <VBox.margin>
              <Insets />
            </VBox.margin>
        </Separator>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label minWidth="100.0" text="Availability:" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>
            <Label fx:id="availability" alignment="CENTER" layoutX="10.0" layoutY="10.0" minWidth="40.0" style="-fx-background-color: #F7E7DC; -fx-background-radius: 10;" text="0.0" HBox.hgrow="NEVER">
                <font>
                    <Font size="14.0" />
                </font>
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </padding>
            </Label>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label minWidth="100.0" text="Type:" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>
            <Label fx:id="type" alignment="CENTER" layoutX="10.0" layoutY="10.0" minWidth="40.0" style="-fx-background-color: #F7E7DC; -fx-background-radius: 10;" text="Relaxation" HBox.hgrow="NEVER">
                <font>
                    <Font size="14.0" />
                </font>
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </padding>
            </Label>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label minWidth="100.0" text="Participant:" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>
            <Label fx:id="participant" alignment="CENTER" layoutX="10.0" layoutY="10.0" minWidth="40.0" style="-fx-background-color: #F7E7DC; -fx-background-radius: 10;" text="1" HBox.hgrow="NEVER">
                <font>
                    <Font size="14.0" />
                </font>
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </padding>
            </Label>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label minWidth="100.0" text="Price:" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>
            <Label fx:id="price" alignment="CENTER" layoutX="10.0" layoutY="10.0" minWidth="40.0" style="-fx-background-color: #F7E7DC; -fx-background-radius: 10;" text="0.4" HBox.hgrow="NEVER">
                <font>
                    <Font size="14.0" />
                </font>
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </padding>
            </Label>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label minWidth="100.0" text="Accessibility:" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>
            <Label fx:id="accessibility" alignment="CENTER" layoutX="10.0" layoutY="10.0" minWidth="40.0" style="-fx-background-color: #F7E7DC; -fx-background-radius: 10;" text="Few to no challenges" HBox.hgrow="NEVER">
                <font>
                    <Font size="14.0" />
                </font>
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </padding>
            </Label>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label minWidth="100.0" text="Duration:" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>
            <Label fx:id="duration" alignment="CENTER" layoutX="10.0" layoutY="10.0" minWidth="40.0" style="-fx-background-color: #F7E7DC; -fx-background-radius: 10;" text="minutes" HBox.hgrow="NEVER">
                <font>
                    <Font size="14.0" />
                </font>
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </padding>
            </Label>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label minWidth="100.0" text="Kid Friendly:" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>
            <Label fx:id="kidFriendly" alignment="CENTER" layoutX="10.0" layoutY="10.0" minWidth="40.0" style="-fx-background-color: #F7E7DC; -fx-background-radius: 10;" text="Yes" HBox.hgrow="NEVER">
                <font>
                    <Font size="14.0" />
                </font>
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </padding>
            </Label>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label minWidth="100.0" text="Link:" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>
            <Label fx:id="link" alignment="CENTER" layoutX="10.0" layoutY="10.0" minWidth="40.0" style="-fx-background-color: #F7E7DC; -fx-background-radius: 10;" text="NA" HBox.hgrow="NEVER">
                <font>
                    <Font size="14.0" />
                </font>
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </padding>
            </Label>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label minWidth="100.0" text="Key:" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>
            <Label fx:id="key" alignment="CENTER" layoutX="10.0" layoutY="10.0" minWidth="40.0" style="-fx-background-color: #F7E7DC; -fx-background-radius: 10;" text="6613330" HBox.hgrow="NEVER">
                <font>
                    <Font size="14.0" />
                </font>
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </padding>
            </Label>
        </HBox>
    </VBox>
    <VBox fx:id="moreOptions" alignment="CENTER" maxHeight="-Infinity" maxWidth="150.0" style="-fx-background-color: white; -fx-background-radius: 10;" visible="false">
        <StackPane.margin>
            <Insets right="30.0" top="20.0" />
        </StackPane.margin>
        <Label fx:id="dlJSON" alignment="CENTER" maxWidth="1.7976931348623157E308" text="Download as JSON">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
        </Label>
        <Separator prefWidth="200.0" />
        <Label fx:id="dlCSV" alignment="CENTER" layoutX="10.0" layoutY="10.0" maxWidth="1.7976931348623157E308" text="Download as CSV">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
        </Label>
        <Separator prefWidth="200.0" />
        <Label fx:id="print" alignment="CENTER" layoutX="10.0" layoutY="10.0" maxWidth="1.7976931348623157E308" text="Print to console">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
        </Label>
    </VBox>
</StackPane>
